<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.speakingnewsapp.Activities.ContactScreen">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/tea_circle"
                        android:layout_width="152dp"
                        android:layout_height="155dp"

                        app:cb_color="#A200A2"
                        app:cb_pressedRingWidth="8dip"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/coffee_circle"
                        android:layout_width="164dp"
                        android:layout_height="151dp"

                        android:layout_marginLeft="0dp"
                        app:cb_color="#A200A2"
                        app:cb_pressedRingWidth="8dip"
                        app:layout_constraintLeft_toRightOf="@+id/tea_circle"
                        tools:layout_editor_absoluteY="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/blanket_circle"
                        android:layout_width="148dp"
                        android:layout_height="163dp"

                        app:cb_color="#A200A2"
                        app:cb_pressedRingWidth="8dip"

                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/water_circle"
                        android:layout_width="158dp"
                        android:layout_height="161dp"
                        android:layout_marginLeft="0dp"
                        app:cb_color="#A200A2"
                        app:cb_pressedRingWidth="8dip"
                        app:layout_constraintLeft_toRightOf="@+id/blanket_circle"
                        tools:layout_editor_absoluteY="0dp" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="                 Type your request here" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SEND REQUEST" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>