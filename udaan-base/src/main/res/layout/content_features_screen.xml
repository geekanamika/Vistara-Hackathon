<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.speakingnewsapp.Activities.FeaturesScreen"
    tools:showIn="@layout/activity_features_screen">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:id="@+id/eMenuCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="E-Menu"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="5dp"
                    android:text="This is e-menu"
                    android:textSize="10sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/entertainmentCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ebooks"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="5dp"
            android:text="Entertainment"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:text="This is entertainment section"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"/>


    </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:id="@+id/servicesCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/cartoon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="5dp"
            android:text="Services"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:text="This is service section"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"/>


    </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
